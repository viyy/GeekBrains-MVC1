@using WebStore.DomainModels.Models
@model WebStore.DomainModels.Models.LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<section id="form"><!--form-->
	<div class="row">
		<div class="col-sm-4 col-sm-offset-1">
			<div class="login-form"><!--login form-->
				<h2>Login to your account</h2>
				<form asp-action="Login" asp-antiforgery="true">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="ReturnUrl" />
					<input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
					<input asp-for="Password" placeholder="@nameof(Model.Password)" />
					<button type="submit" class="btn btn-default">Войти</button>
				</form>
			</div><!--/login form-->
		</div>
	</div>
</section><!--/form-->