@model WebStore.DomainModels.Dto.PagedProductDto

@{
    ViewData["Title"] = "Список продуктов";
}


<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.FirstOrDefault().ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Price)
        </th>      
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>

    </tr>
}
    </tbody>
</table>
